{{ use('yii/widgets/LinkPager') }}

<section id="main-area" class="fullwidth">
    <h3 style="display: none;">Main Area</h3>
    <div class="container">
        <div class="status-message">
            <div class="message"><strong>Search Results</strong></div>
        </div>
        <div class="row">
            <section id="main" class="main col-md-12">
                <div class="blog-layout layout-1 has-caption2" style="display: block">
                    <div class="blog-wrapper row">

                        {% for post in posts %}
                            <div class="col col-sm-3">
                                <article class="post">
                                    <div class="post-thumb">
                                        <a href="{{ post['postUrl'] }}">
                                            <img class="lazy" src="{{ post['imageUrl'] }}" data-src="{{ post['imageUrl'] }}" alt="{{ post['postTitle'] }}" style="opacity: 1;">
                                        </a>
                                        {#<span class="post-format">#}
                                                        {#<i class="fa fa-play"></i>#}
                                                    {#</span>#}
                                    </div><!-- Post Image -->
                                    <div class="post-content">
                                        <h5 class="post-title">
                                            <a href="{{ post['postUrl'] }}">{{ post['postTitle'] }}</a>
                                        </h5><!-- Post Title -->
                                        <p class="post-entry">{{ post['postContent'] }}</p><!-- Post Entry -->
                                        <ul class="post-meta">
                                            <li><i class="fa fa-clock-o"></i> {{ post['postDate'] }}</li>
                                        </ul><!-- Post Meta -->
                                    </div><!-- Post Content -->
                                </article>
                            </div><!-- Column -->
                        {% endfor %}

                    </div><!-- Blog Wrapper -->
                </div><!-- Blog Layout -->
                <div class="blog-pagination">
                    {{ link_pager_widget({'pagination':pagination}) }}
                </div>
            </section><!-- Main -->
        </div><!-- Row -->
    </div><!-- Container -->
</section>